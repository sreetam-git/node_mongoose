  <style>
    
        body {
        height: 100vh;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #4b79a1, #283e51);
        }

        .container {
        width: 100%;
        max-width: 380px;
        }

        .login-box {
        width: 100%;
        padding: 40px;
        border-radius: 12px;
        backdrop-filter: blur(15px);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        text-align: center;
        }

        .login-box h2 {
        color: #fff;
        margin-bottom: 25px;
        font-size: 28px;
        }

        .input-box {
        position: relative;
        width: 100%;
        margin-bottom: 25px;
        }

        .input-box input {
        width: 100%;
        padding: 12px 0;
        border: none;
        outline: none;
        border-bottom: 2px solid #fff;
        background: transparent;
        color: #fff;
        font-size: 16px;
        }

        .input-box label {
        position: absolute;
        left: 0;
        bottom: 12px;
        color: #ddd;
        transition: 0.3s;
        pointer-events: none;
        }

        .input-box input:focus + label,
        .input-box input:valid + label {
        transform: translateY(-22px);
        font-size: 14px;
        color: #fff;
        }

        .btn {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        border: none;
        border-radius: 6px;
        background: #fff;
        color: #333;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        }

        .btn:hover {
        background: #f2f2f2;
        }

        .signup-text {
        color: #eee;
        margin-top: 15px;
        font-size: 14px;
        }

        .signup-text a {
        color: #fff;
        font-weight: 600;
        text-decoration: underline;
        }

  </style>

  <div class="container">
    <form class="login-box" method="post" action="/login">
      <h2>Welcome Back</h2>
      <% if(errorMessage) { %>
        <div class="alert alert-danger" style="color: tomato; font-weight:600;"><%= errorMessage %></div>
      <% } %>
      <div class="input-box">
        <input type="email" name="email" required />
        <label>Email</label>
      </div>

      <div class="input-box">
        <input type="password" name="password" required />
        <label>Password</label>
      </div>

      <button type="submit" class="btn">Login</button>

      <p class="signup-text">Don't have an account?
        <a href="/signup">Sign Up</a>
      </p>
      <div class="signup-text">
        <a href="/reset-password">Reset Password</a>
      </div>
    </form> 
  </div>